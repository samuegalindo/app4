<?xml version="1.0" encoding="UTF-8"?>  

<widget xmlns ="http://www.w3.org/ns/widgets"
	xmlns:gap ="hrrps://phonegap.com/ns/1.0"
	id ="com.phonegap.app2"
	version ="1.0.0">
	
	<name>app2-Especialidad Tecnico en Programacion</name>
	
	<description>
	Aplicacion que muestra la informacion sobre la especialidad de Tecnico en Programacion CBTis
	</description>
	
	<author href="https://build.phonegap.com" email="cb16.galindo.rodriguez.esteban@gmail.com">
	Esteban Samuel Galindo Rodriguez
	</author>
	
	<!--Personaliza la aplicacion y plataforma -->
	<preference name="orientation"			value="defult" />
	<!--<preference name="orientation"			value="portrait"/>
	<preference name="orientation"			value="landscape" /> -->
	<preference namne="target-device"			value="universal" />
	<preference name="fullscreen"			value="true" />
	<preference name="android-installLocation" value="auto" />
	<preference name="permissions" value="INTERNET" />
	
	<!--Plugins-->
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-vibration" spec="~2.1.3" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
	
	<!--Para accesar a paginas en Internet-->
	<allow-intent href="http://*/*"/>
	<acces origin="https://*/*"/>
	<allow-intent href="http://*/*"/>
	<acces origin="http ://*/*"/>
	<plugin name="cordova-plugin-whitelist" source="nmp"/>
	
	
	<!--Colocar icono app-->
	
	<icon src="res/android/mdpi.png" />
	
	</widget>
	</widget>
